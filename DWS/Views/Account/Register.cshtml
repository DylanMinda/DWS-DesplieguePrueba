@model MedIQ_Modelos.Usuario

@{
    ViewData["Title"] = "Registro";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" />
}

<div class="form-container">
    <div class="form-header">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="8" r="4" fill="#2563eb" />
            <path d="M4 20C4 16.6863 6.68629 14 10 14H14C17.3137 14 20 16.6863 20 20" stroke="#2563eb" stroke-width="2" stroke-linecap="round" />
        </svg>
        <h1>Crear Cuenta</h1>
        <p>Únete para acceder a tu asistente médico</p>
    </div>

    @* Mostramos errores de validación si los hay *@
    <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 1rem; list-style: none; font-size: 0.9rem;"></div>

    <form asp-action="Register" method="post">
        <div class="form-group">
            <label class="form-label" asp-for="Nombre">Nombre Completo</label>
            <input asp-for="Nombre" class="form-input" placeholder="Juan Pérez" required>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Email">Correo Electrónico</label>
            <input asp-for="Email" class="form-input" placeholder="tu@email.com" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="Contraseña">Contraseña</label>
            <input asp-for="Contraseña" type="password" class="form-input" placeholder="••••••••" required>
            <span asp-validation-for="Contraseña" class="text-danger"></span>
        </div>

        @* Nota: Si tu modelo Usuario no tiene ConfirmPassword, este campo solo sirve para validación visual por ahora *@
        <div class="form-group">
            <label class="form-label" for="confirmPassword">Confirmar Contraseña</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-input" placeholder="••••••••" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-full">Crear Cuenta</button>
        </div>

        <div class="form-footer">
            ¿Ya tienes cuenta? <a asp-action="Login">Inicia sesión</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}