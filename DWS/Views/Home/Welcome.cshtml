@{
    ViewData["Title"] = "Bienvenido a MedIQ";
}

@section Styles {
    <link rel="stylesheet" href="~/css/welcome.css" />
}

<div class="welcome-container fade-in-up">
    <div class="welcome-hero">
        <div class="hero-icon-wrapper">
            <div class="floating-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2L2 7L12 12L22 7L12 2Z" />
                    <path d="M2 17L12 22L22 17M2 12L12 17L22 12" />
                </svg>
            </div>
        </div>
        <h1 class="hero-title">
            Bienvenido a <span class="gradient-text">MedIQ</span>
        </h1>
        <p class="hero-subtitle">
            Tu asistente inteligente de información médica 🩺
        </p>
        <p class="hero-description">
            Información confiable sobre medicamentos, tratamientos y salud al alcance de tu mano
        </p>
    </div>

    <div class="features-grid">
        <div class="feature-card glass-card">
            <div class="feature-icon">
                💊
            </div>
            <h3>Información Precisa</h3>
            <p>Datos actualizados sobre medicamentos, dosis y efectos</p>
        </div>

        <div class="feature-card glass-card">
            <div class="feature-icon">
                ⚡
            </div>
            <h3>Respuestas Rápidas</h3>
            <p>Obtén información al instante con IA avanzada</p>
        </div>

        <div class="feature-card glass-card">
            <div class="feature-icon">
                🛡️
            </div>
            <h3>Alertas de Seguridad</h3>
            <p>Sistema de detección de riesgos en tiempo real</p>
        </div>

        <div class="feature-card glass-card">
            <div class="feature-icon">
                🎯
            </div>
            <h3>Fácil de Usar</h3>
            <p>Interfaz intuitiva diseñada para todos</p>
        </div>
    </div>

    <div class="cta-section">
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Instructions" asp-controller="Home" class="btn btn-primary btn-large">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                </svg>
                Comenzar Ahora
            </a>
        }
        else
        {
            <div class="auth-buttons">
                <a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-large">
                    Iniciar Sesión
                </a>
                <a asp-action="Register" asp-controller="Account" class="btn btn-secondary btn-large">
                    Crear Cuenta
                </a>
            </div>
        }
    </div>

    <div class="info-banner glass-card">
        <div class="banner-icon">ℹ️</div>
        <div class="banner-content">
            <strong>Importante:</strong> MedIQ es una herramienta educativa. No sustituye la consulta médica profesional.
        </div>
    </div>
</div>