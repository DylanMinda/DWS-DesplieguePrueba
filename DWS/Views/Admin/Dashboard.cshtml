@using MedIQ_Modelos
@{
    ViewData["Title"] = "Panel de Control MedIQ";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" />
    <style>
        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }

        .action-card.large {
            padding: 40px;
            text-align: center;
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .action-card.large:hover {
            border-color: var(--blue-400);
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(91, 123, 213, 0.15);
        }

        .action-card.large .action-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }

        .action-card.large h3 {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: var(--blue-700);
        }

        .action-card.large p {
            color: #64748b;
            font-size: 1rem;
        }

        .summary-stats {
            display: flex;
            gap: 20px;
            margin-top: 40px;
            padding: 20px;
            background: white;
            border-radius: 15px;
            border: 1px solid #e2e8f0;
        }

        .stat-item {
            flex: 1;
            text-align: center;
            padding: 10px;
            border-right: 1px solid #e2e8f0;
        }

        .stat-item:last-child {
            border-right: none;
        }

        .stat-item span {
            display: block;
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--blue-600);
        }

        .stat-item label {
            font-size: 0.85rem;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
    </style>
}

<div class="admin-container fade-in-up" style="max-width: 1000px;">
    <div class="admin-header">
        <h1>üõ°Ô∏è Centro de Control MedIQ</h1>
        <p>Gestiona el conocimiento y la inteligencia del asistente</p>
    </div>

    <div class="dashboard-grid">
        <a asp-controller="Conocimiento" asp-action="Categorias" class="action-card glass-card large">
            <div class="action-icon">üìö</div>
            <h3>Temas M√©dicos</h3>
            <p>Crear, organizar y editar los temas principales que el bot muestra en su men√∫.</p>
        </a>

        <a asp-controller="Conocimiento" asp-action="Preguntas" class="action-card glass-card large">
            <div class="action-icon">üìù</div>
            <h3>Banco de Preguntas</h3>
            <p>Gestionar las preguntas frecuentes y las respuestas detalladas del asistente.</p>
        </a>
    </div>

    <div class="summary-stats">
        <div class="stat-item">
            <span>@ViewBag.Stats.TotalTemas</span>
            <label>Temas Activos</label>
        </div>
        <div class="stat-item">
            <span>@ViewBag.Stats.TotalPreguntas</span>
            <label>Preguntas en Base</label>
        </div>
        <div class="stat-item">
            <span>@ViewBag.Stats.MensajesHoy</span>
            <label>Consultas Hoy</label>
        </div>
    </div>

    <div style="margin-top: 40px; padding: 25px; border-radius: 15px; background: #f8fafc; border: 1px dashed #cbd5e1;">
        <h4 style="margin-bottom: 10px; color: #334155;">üí° Tip para el Administrador</h4>
        <p style="color: #64748b; margin: 0;">Al agregar nuevas preguntas, usa palabras clave sencillas. Esto ayuda a que el bot identifique el tema mucho m√°s r√°pido cuando los usuarios escriben de forma libre.</p>
    </div>
</div>
