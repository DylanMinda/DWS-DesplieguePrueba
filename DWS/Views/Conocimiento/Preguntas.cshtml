@model IEnumerable<MedIQ_Modelos.ConocimientoQA>
@using System.Text.Encodings.Web
@{
    ViewData["Title"] = "Gesti√≥n de Preguntas";
    Layout = "_Layout";
}

<style>
    .admin-container {
        padding: 40px 20px;
        max-width: 1300px;
        margin: 0 auto;
    }

    .qa-table-container {
        background: white;
        border-radius: 24px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin-top: 20px;
    }

    .qa-table {
        width: 100%;
        border-collapse: collapse;
    }

    .qa-table th {
        background: #f8fafc;
        padding: 20px;
        text-align: left;
        font-weight: 600;
        color: #475569;
        border-bottom: 1.5px solid #e2e8f0;
    }

    .qa-table td {
        padding: 20px;
        border-bottom: 1px solid #f1f5f9;
        vertical-align: middle;
    }

    .qa-table tr:hover {
        background: #fcfdfe;
    }

    /* Botones de acci√≥n mejorados */
    .btn-qa-action {
        width: 45px;
        height: 45px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
        margin-left: 5px;
        font-size: 1.1rem;
        text-decoration: none;
    }

    .btn-qa-edit {
        background: #f1f5f9;
        color: #475569;
    }

    .btn-qa-edit:hover {
        background: var(--blue-100);
        color: var(--blue-600);
        transform: scale(1.05);
    }

    .btn-qa-delete {
        background: #fee2e2;
        color: #dc2626;
    }

    .btn-qa-delete:hover {
        background: #fecaca;
        transform: scale(1.05);
    }

    .cat-badge {
        font-size: 0.85rem;
        font-weight: 600;
        background: #e3f2fd;
        color: #1976d2;
        padding: 6px 14px;
        border-radius: 20px;
        display: inline-block;
    }

    .parent-indicator {
        color: #94a3b8;
        margin-right: 8px;
        font-size: 0.9rem;
    }
</style>

<div class="admin-container fade-in-up">
    <div style="margin-bottom: 25px;">
        <a asp-action="Categorias" style="color: #64748b; text-decoration: none; font-weight: 500; display: inline-flex; align-items: center; gap: 8px;">
            <i class="fas fa-arrow-left"></i> Volver a Temas M√©dicos
        </a>
    </div>

    <div style="display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 30px;">
        <div>
            <h2 style="font-size: 2rem; color: #1e293b; margin-bottom: 5px;">üìù Banco de Conocimiento</h2>
            <p style="color: #64748b;">Administra las preguntas y respuestas que el asistente utiliza.</p>
        </div>
        <button onclick="openCreateModal()" class="btn btn-primary" style="padding: 12px 25px; border-radius: 12px;">
            <i class="fas fa-plus-circle"></i> Nueva Pregunta
        </button>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger fade-in" style="background: #fef2f2; color: #991b1b; padding: 15px; border-radius: 12px; margin-bottom: 20px; border-left: 5px solid #ef4444;">
            @TempData["Error"]
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success fade-in" style="background: #ecfdf5; color: #065f46; padding: 15px; border-radius: 12px; margin-bottom: 20px; border-left: 5px solid #10b981;">
            @TempData["Success"]
        </div>
    }

    <div class="qa-table-container">
        <table class="qa-table">
            <thead>
                <tr>
                    <th style="width: 45%;">Pregunta / Nivel</th>
                    <th style="width: 20%;">Tema Relacionado</th>
                    <th style="width: 20%;">Palabras Clave</th>
                    <th style="width: 15%; text-align: right;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var qa in Model)
                {
                    <tr>
                        <td style="font-weight: 500; color: #334155;">
                            @if (qa.ParentId != null)
                            {
                                <span class="parent-indicator"><i class="fas fa-reply fa-rotate-180"></i> Sub-nivel</span>
                            }
                            @qa.Pregunta
                        </td>
                        <td>
                            <span class="cat-badge">@qa.Categoria.Nombre</span>
                        </td>
                        <td style="color: #64748b; font-size: 0.9rem;">
                            @(string.IsNullOrEmpty(qa.Keywords) ? "‚Äî" : qa.Keywords)
                        </td>
                        <td style="text-align: right;">
                            <button onclick="openEditModal(@qa.Id, '@Html.Raw(JavaScriptEncoder.Default.Encode(qa.Pregunta))', '@Html.Raw(JavaScriptEncoder.Default.Encode(qa.Respuesta))', '@qa.Keywords', @qa.CategoriaId, @(qa.ParentId?.ToString() ?? "null"))" 
                                    class="btn-qa-action btn-qa-edit" title="Editar">
                                <i class="fas fa-pencil-alt"></i>
                            </button>
                            <form asp-action="DeletePregunta" asp-route-id="@qa.Id" method="post" style="display:inline;" onsubmit="return confirm('¬øBorrar esta pregunta?')">
                                <button type="submit" class="btn-qa-action btn-qa-delete" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Upsert -->
<div id="modalUpsert" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(15, 23, 42, 0.75); z-index:2000; align-items:center; justify-content:center; backdrop-filter: blur(4px);">
    <div class="fade-in-up" style="background:white; padding:40px; border-radius:24px; width:100%; max-width:750px; max-height: 90vh; overflow-y: auto; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
        <h3 id="modalTitle" style="font-size: 1.5rem; margin-bottom: 30px; color: #1e293b;">Nueva Pregunta</h3>
        <form asp-action="UpsertPregunta" method="post">
            <input type="hidden" name="Id" id="qaId" value="0" />
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom:20px;">
                <div>
                    <label style="display: block; font-weight: 600; color: #475569; margin-bottom: 8px;">Tema Principal</label>
                    <select name="CategoriaId" id="qaCategoriaId" required style="width:100%; padding:12px; border:1.5px solid #e2e8f0; border-radius:12px; outline: none;">
                        @foreach (var cat in (IEnumerable<MedIQ_Modelos.ConocimientoCategoria>)ViewBag.Categorias)
                        {
                            <option value="@cat.Id">@cat.Nombre</option>
                        }
                    </select>
                </div>
                <div>
                    <label style="display: block; font-weight: 600; color: #475569; margin-bottom: 8px;">Vincular a Pregunta (Opcional)</label>
                    <select name="ParentId" id="qaParentId" style="width:100%; padding:12px; border:1.5px solid #e2e8f0; border-radius:12px; outline: none;">
                        <option value="">-- No vincular (Principal) --</option>
                        @foreach (var p in Model.Where(m => m.ParentId == null))
                        {
                            <option value="@p.Id">@p.Pregunta</option>
                        }
                    </select>
                </div>
            </div>

            <div style="margin-bottom:20px;">
                <label style="display: block; font-weight: 600; color: #475569; margin-bottom: 8px;">Pregunta del Usuario</label>
                <input name="Pregunta" id="qaPregunta" required placeholder="¬øC√≥mo debo tomar...?" style="width:100%; padding:12px; border:1.5px solid #e2e8f0; border-radius:12px; outline: none;" />
            </div>

            <div style="margin-bottom:20px;">
                <label style="display: block; font-weight: 600; color: #475569; margin-bottom: 8px;">Respuesta Educativa</label>
                <textarea name="Respuesta" id="qaRespuesta" required placeholder="Escribe la respuesta detallada aqu√≠..." style="width:100%; height:180px; padding:12px; border:1.5px solid #e2e8f0; border-radius:12px; outline: none; font-family: inherit; resize: vertical;"></textarea>
            </div>

            <div style="margin-bottom:30px;">
                <label style="display: block; font-weight: 600; color: #475569; margin-bottom: 8px;">Palabras Clave de B√∫squeda (Separadas por comas)</label>
                <input name="Keywords" id="qaKeywords" placeholder="ej: dosis, paracetamol, efectos" style="width:100%; padding:12px; border:1.5px solid #e2e8f0; border-radius:12px; outline: none;" />
            </div>

            <div style="display:flex; justify-content:flex-end; gap:12px;">
                <button type="button" onclick="document.getElementById('modalUpsert').style.display='none'" style="padding: 12px 25px; border-radius: 12px; border: 1px solid #e2e8f0; background: #f8fafc; color: #64748b; cursor: pointer; font-weight: 600;">Cancelar</button>
                <button type="submit" style="padding: 12px 30px; border-radius: 12px; border: none; background: var(--blue-600); color: white; cursor: pointer; font-weight: 600;">Guardar Pregunta</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openCreateModal() {
        document.getElementById('modalTitle').innerText = 'Nueva Pregunta';
        document.getElementById('qaId').value = '0';
        document.getElementById('qaPregunta').value = '';
        document.getElementById('qaRespuesta').value = '';
        document.getElementById('qaKeywords').value = '';
        document.getElementById('qaParentId').value = '';
        const selectedCat = '@(ViewBag.SelectedCategoriaId ?? "")';
        if(selectedCat) document.getElementById('qaCategoriaId').value = selectedCat;
        document.getElementById('modalUpsert').style.display = 'flex';
    }

    function openEditModal(id, pregunta, respuesta, keywords, catId, parentId) {
        document.getElementById('modalTitle').innerText = 'Editar Pregunta';
        document.getElementById('qaId').value = id;
        document.getElementById('qaPregunta').value = pregunta;
        document.getElementById('qaRespuesta').value = respuesta;
        document.getElementById('qaKeywords').value = keywords;
        document.getElementById('qaCategoriaId').value = catId;
        document.getElementById('qaParentId').value = parentId || '';
        document.getElementById('modalUpsert').style.display = 'flex';
    }
</script>
